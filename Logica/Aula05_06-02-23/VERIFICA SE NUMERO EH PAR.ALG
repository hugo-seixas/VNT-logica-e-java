Algoritmo "Verifica se numero eh par"

Var

    valor : inteiro
    
    procedimento verificaValor (V: inteiro)

    inicio
          se (V % 2 = 0) entao
             escreva("É par")
          senao
             escreva("É ímpar")
          fimse
    fimprocedimento

Inicio

      escreva("Digite um valor: ")
      leia (valor)
      
      verificaValor(valor)
      


Fimalgoritmo